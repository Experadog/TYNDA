{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 100
	},

	"organizeImports": {
		"enabled": true
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"security": { "all": true },
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	},

	"files": {
		"ignoreUnknown": false,
		"ignore": ["cache", "dist", "node_modules", "next"]
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
